<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DropdownTextInputLayoutStyle">
        <item name="android:layout_height">64dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconDrawable">@drawable/ic_arrow_down</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="DropdownAutoCompleteEditText">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

</resources>